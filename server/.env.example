# Server Configuration
# Copy this file to .env and fill in your actual values

# Port the server will run on
PORT=5000

# MongoDB connection URI
# For local development: mongodb://localhost:27017/neura-task
# For production: mongodb+srv://username:password@cluster.mongodb.net/database
MONGO_URI=mongodb://localhost:27017/neura-task

# JWT Secret for token signing
# IMPORTANT: Use a strong, random string in production!
# Generate one with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Client URL for CORS (optional)
# Used in production to specify the frontend URL
CLIENT_URL=http://localhost:5173

# Node environment (optional, defaults to development)
NODE_ENV=development
